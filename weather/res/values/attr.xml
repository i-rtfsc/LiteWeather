<resources>
    <declare-styleable name="MxxPagerTitleStrip">
        <attr name="pts_radius" format="dimension" />
        <attr name="pts_margin" format="dimension" />
        <attr name="pts_background" format="color|integer" />
        <attr name="pts_selected_background" format="color|integer" />
        <attr name="pts_gravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LabelSpinner">
        <attr name="titleText" format="string" />
        <attr name="summaryText" format="string" />
        <attr name="entries" format="reference" />
    </declare-styleable>

</resources>