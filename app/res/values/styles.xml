    <style name="suggestion_brf">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="suggestion_info_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="suggestion_image">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="suggestion_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="suggestion_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
        <item name="android:layout_marginLeft">56dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/divider_secondary</item>
    </style>

